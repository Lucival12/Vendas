@model IEnumerable<Vendas.Models.Cliente>

@{
    ViewBag.Title = "Listar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listar Cliente</h2>
<button type="button" class="btn btn-add pull-right" onclick="adicionar('Cliente')">
    <span class="glyphicon glyphicon-plus"></span>Adicionar
</button>
<table class="table">
    <tr>
        <th class="col-md-5">
            @Html.DisplayNameFor(model => model.xRazaoSocialCliente)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.xRua)
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.xCidade)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.xRazaoSocialCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.xRua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.xCidade)
            </td>
            <td>
                <button class="btn btn-warning btn-sm" onclick="alterar('@item.idCliente','Cliente');">
                    <span class="glyphicon glyphicon-pencil"></span>Alterar
                </button>
            <td>
                <button class="btn btn-danger btn-sm" onclick="remover('@item.idCliente','Cliente');">
                    <span class="glyphicon glyphicon-trash"></span>Remover
                </button>
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/scripts/Util.js")
    @Scripts.Render("~/scripts/Util.js")|
}

