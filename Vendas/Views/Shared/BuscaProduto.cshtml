

<div id="modalSearchProduto" class="modal fade" role="dialog">
    @using (Ajax.BeginForm("Buscar", "Produto", null,
                                                new AjaxOptions { HttpMethod = "post", OnSuccess = "buscarProduto" }, new { id = "formBuscaProduto", @class = "form-horizontal" }))
    {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 style="text-align: center" class="modal-title">
                        Busca de Produto
                    </h1>
                    <button type="button" class="close" data-dismiss="modal" title="Fechar busca">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group form-busca-popup">
                            <div class="form-group">
                                @Html.Label("Nome", new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-4">
                                    <input class="form-control" id="produtoNomeSearch" name="Produto.xNomeProduto" type="text" value="">
                                </div>
                                <button type="submit" class="btn btn-success" onclick="return validaBuscaProduto();">
                                    <span class="glyphicon glyphicon-search"></span>Buscar
                                </button>
                            </div>
                            <div class="form-group">
                                @Html.Label("Quantidade", new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-4">
                                    <input class="form-control" id="produtoQuantidade" name="produtoQuantidade" type="text" value="">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <div id="listaProdutos" class="form-busca-popup-resultados"></div>
            </div>
        </div>
    }
</div>
